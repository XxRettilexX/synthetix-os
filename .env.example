# Synthetix OS - Environment Variables
# Copy this file to .env and fill in your real values

# Supabase (Required for Auth & Core DB)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your-anon-key-here

# Network Configuration
TAILSCALE_IP=100.64.0.1
NEXT_PUBLIC_API_URL=http://localhost:8000/api
NEXT_PUBLIC_WS_URL=ws://localhost:8000/api/ws/devices

# Database & Cache (Defaults for Docker Compose)
DATABASE_URL=postgresql://synthetix:synthetix_password@postgres:5432/synthetix_logs
REDIS_URL=redis://redis:6379/0

# Storage
STORAGE_PATH=./shared_storage

# General
ENVIRONMENT=development
DEBUG=True
